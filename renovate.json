{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "semanticCommits": "enabled",
  "rebaseWhen": "never",
  "autodiscover": true,
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "semanticCommitType": "feat"
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "semanticCommitType": "feat"
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "semanticCommitType": "fix"
    }
  ]
}
